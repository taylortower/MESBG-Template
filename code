<script>
  // Portrait upload
  document.getElementById('img-upload').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (!file) return;
    const reader = new FileReader();
    reader.onload = function(ev) {
      const img = document.getElementById('portrait-img');
      img.src = ev.target.result;
      img.style.display = 'block';
      document.getElementById('portrait-ph').style.display = 'none';
    };
    reader.readAsDataURL(file);
  });

  function addPowerRow() {
    const table = document.getElementById('powers-table');
    const row = table.insertRow();
    for (let i = 0; i < 3; i++) {
      const td = row.insertCell();
      td.contentEditable = 'true';
      td.textContent = i === 0 ? 'New Power' : i === 1 ? '12"' : '4+';
    }
  }

  function removePowerRow() {
    const table = document.getElementById('powers-table');
    if (table.rows.length > 1) table.deleteRow(table.rows.length - 1);
  }
</script>

